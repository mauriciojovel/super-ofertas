<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="titulo" parent="AppTheme">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:paddingLeft">@dimen/micro_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/negro</item>
    </style>
    
    <style name="alineadoDerecha" parent="AppTheme">
        <item name="android:gravity">right</item>
    </style>
    
    <style name="textoMedioDerecha" parent="alineadoDerecha">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/verde</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingRight">@dimen/micro_padding</item>
    </style>
    
    <style name="textoPequenio" parent="AppTheme">
        <item name="android:textSize">@dimen/text_micro_size</item>
    </style>
    
    <style name="etiqueta" parent="textoPequenio">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/micro_padding</item>
    </style>
    
    <style name="textoPequenioDerecha" parent="textoPequenio">
        <item name="android:paddingLeft">@dimen/micro_padding</item>
    </style>
    
    <style name="DropDownCompactBar">
        <item name="android:padding">@dimen/micro_padding</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textColorHighlight">@color/negro</item>
    </style>
    
    <style name="OfertaBG">
        <item name="android:background">@drawable/background_color_shape</item>
    </style>
    
    <style name="CarritoBG">
        <item name="android:background">@drawable/background_color_inverse_shape</item>
    </style>
    
</resources>
